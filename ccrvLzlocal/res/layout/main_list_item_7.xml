<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/img_tripImg"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_tripImg"
        android:layout_toRightOf="@+id/img_tripImg"
        android:text="Large Text"
        android:textColor="#555555"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/img_dcp_detail_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_tripImg"
        android:layout_alignLeft="@+id/text_title"
        android:src="@drawable/icon_cus_dian" />

    <TextView
        android:id="@+id/text_cusName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_dcp_detail_star"
        android:layout_toRightOf="@+id/img_dcp_detail_star"
        android:layout_marginLeft="2dp"
        android:textColor="#BCBCBC"
        android:textSize="12dp"
        android:text="名字" />

    <ImageView
        android:id="@+id/img_addser_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_dcp_detail_star"
        android:layout_toRightOf="@+id/text_cusName"
        android:layout_marginLeft="3dp"
        android:src="@drawable/icon_cus_level1" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_addser_sub"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:textColor="#BCBCBC"
        android:textSize="12dp"
        android:text="2014.03" />

    <ImageView
        android:id="@+id/img_dcp_detail_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_time"
        android:layout_toLeftOf="@+id/text_time"
        android:src="@drawable/icon_cus_time" />

</RelativeLayout>
