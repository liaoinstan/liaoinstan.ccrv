<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:context=".AddSerActivity" >

    <TextView
        android:id="@+id/text_coupon_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_person_startcity"
        android:layout_alignBottom="@+id/text_person_startcity"
        android:layout_toRightOf="@+id/text_person_startcity"
        android:text="￥"
        android:textColor="#f87b5c"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_person_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_coupon_starttime"
        android:layout_alignBottom="@+id/text_coupon_starttime"
        android:layout_toRightOf="@+id/text_coupon_starttime"
        android:text="128"
        android:textColor="#f87b5c"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_coupon_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_person_price"
        android:layout_toRightOf="@+id/text_person_price"
        android:text="/人"
        android:textColor="#f87b5c"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/img_person_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/hot_icon_dcp_add_true" />

    <TextView
        android:id="@+id/text_person_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_person_add"
        android:text="0" />

    <ImageView
        android:id="@+id/img_person_sub"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/text_person_num"
        android:src="@drawable/icon_dcp_sub_false" />

    <TextView
        android:id="@+id/text_person_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/img_person_sub"
        android:text="增值服务名称"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/text_person_startcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_person_title"
        android:layout_below="@+id/text_person_title"
        android:text="单价："
        android:textColor="#555555"
        android:textSize="12dp" />

</RelativeLayout>