<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/bk_dcp_item" />
    
    <ImageView
        android:id="@+id/img_addser_sub"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/img_pic"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_dcp_flag" />

    <ImageView
        android:id="@+id/img_dcp_like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/img_addser_sub"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_dcp_like2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:layout_below="@+id/img_pic" >

        <TextView
            android:id="@+id/text_dcp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:text="成都-九寨沟-黄龙3天2晚双汽跟团游" />

        <ImageView
            android:id="@+id/img_dcp_star"
            android:layout_width="70dp"
            android:layout_height="12dp"
            android:paddingBottom="2dp"
            android:layout_alignLeft="@+id/text_dcp_title"
            android:layout_below="@+id/text_dcp_title"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_dcp_star" />

        <TextView
            android:id="@+id/text_dcp_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_dcp_star"
            android:layout_below="@+id/img_dcp_star"
            android:layout_marginTop="3dp"
            android:textColor="#555555"
            android:textSize="11dp"
            android:text="成都/重庆出发" />

        <TextView
            android:id="@+id/text_dcp_detail_tc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_dcp_addr"
            android:layout_below="@+id/text_dcp_addr"
            android:layout_marginTop="3dp"
            android:textColor="#777777"
            android:textSize="11dp"
            android:text="出发日期：" />

        <TextView
            android:id="@+id/text_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_dcp_detail_tc_price"
            android:layout_alignBottom="@+id/text_dcp_detail_tc_price"
            android:layout_toRightOf="@+id/text_dcp_detail_tc_price"
            android:layout_marginTop="3dp"
            android:textColor="#555555"
            android:textSize="11dp"
            android:text="6.2/6.5/6.8" />

        <TextView
            android:id="@+id/text_addser_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_dcp_star"
            android:layout_toRightOf="@+id/img_dcp_star"
            android:layout_marginLeft="3dp"
            android:textSize="11dp"
            android:textColor="#777777"
            android:text="已售" />

        <ImageView
            android:id="@+id/img_action_more"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/text_dcp_oldprice"
            android:layout_alignLeft="@+id/text_dcp_detail_tc_title"
            android:layout_alignRight="@+id/text_dcp_oldprice"
            android:layout_marginBottom="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/delete_line" />
        
        <TextView
            android:id="@+id/text_dcp_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_startdate"
            android:layout_alignBottom="@+id/text_startdate"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:paddingRight="2dp"
            android:textColor="#777777"
            android:textSize="13dp"
            android:text="600" />

        <TextView
            android:id="@+id/text_dcp_detail_tc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_dcp_oldprice"
            android:layout_toLeftOf="@+id/text_dcp_oldprice"
            android:textColor="#777777"
            android:textSize="13dp"
            android:text="￥" />
        
        <TextView
            android:id="@+id/text_dcp_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_addser_price"
            android:layout_alignBottom="@+id/text_addser_price"
            android:layout_toRightOf="@+id/text_addser_price"
            android:text="27"
            android:textColor="#f87b5c"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_dcp_num"
            android:layout_alignBottom="@+id/text_dcp_num"
            android:layout_toRightOf="@+id/text_dcp_num"
            android:text="份"
            android:textColor="#777777"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_dcp_price"
            android:layout_alignBottom="@+id/text_dcp_price"
            android:layout_toLeftOf="@+id/text_dcp_price"
            android:text="￥"
            android:textColor="#f87b5c"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/text_addser_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_dcp_oldprice"
            android:layout_below="@+id/TextView02"
            android:text="起"
            android:textColor="#777777"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/text_dcp_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_addser_unit"
            android:layout_alignBottom="@+id/text_addser_unit"
            android:layout_toLeftOf="@+id/text_addser_unit"
            android:text="300"
            android:textColor="#f87b5c"
            android:textSize="18dp" />

    </RelativeLayout>

    

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/img_addser_sub"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:text="优惠券" />

</RelativeLayout>
