<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    tools:context=".AddSerActivity" >

    <ImageView
        android:id="@+id/img_addser_pic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_dcp_addser_defpic" />

    <TextView
        android:id="@+id/text_addser_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_addser_pic"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_addser_pic"
        android:textSize="13dp"
        android:text="增值服务名称" />

    <TextView
        android:id="@+id/text_addser_startcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_addser_pic"
        android:layout_alignLeft="@+id/text_addser_title"
        android:textSize="12dp"
        android:text="单价：" 
        android:textColor="#555555" />
    
    <TextView
        android:id="@+id/text_coupon_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_addser_startcity"
        android:layout_alignBottom="@+id/text_addser_startcity"
        android:layout_toRightOf="@+id/text_addser_startcity"
        android:textColor="#f87b5c"
        android:textSize="12dp" 
        android:text="￥"/>

    <TextView
        android:id="@+id/text_addser_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_coupon_starttime"
        android:layout_alignBottom="@+id/text_coupon_starttime"
        android:layout_toRightOf="@+id/text_coupon_starttime"
        android:textColor="#f87b5c"
        android:textSize="12dp" 
        android:text="128" />

    <ImageView
        android:id="@+id/img_addser_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/hot_icon_dcp_add_true" />

    <TextView
        android:id="@+id/text_addser_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/img_addser_add"
        android:text="0" />

    <ImageView
        android:id="@+id/img_addser_sub"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/text_addser_num"
        android:src="@drawable/icon_dcp_sub_false" />

    <TextView
        android:id="@+id/text_addser_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_addser_price"
        android:layout_alignBottom="@+id/text_addser_price"
        android:layout_toRightOf="@+id/text_addser_price"
        android:text="个"
        android:textColor="#f87b5c"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/text_addser_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_addser_unit"
        android:layout_alignBottom="@+id/text_addser_unit"
        android:layout_toRightOf="@+id/text_addser_unit"
        android:text="/单"
        android:textColor="#f87b5c"
        android:textSize="12dp" />

</RelativeLayout>
