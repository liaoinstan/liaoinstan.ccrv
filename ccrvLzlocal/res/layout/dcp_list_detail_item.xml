<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/text_dcp_detail_tc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="#444444"
        android:textSize="14dp"
        android:text="情侣套餐（2人）" />
    
    <TextView
        android:id="@+id/text_addser_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_dcp_detail_tc_price"
        android:layout_alignBottom="@+id/text_dcp_detail_tc_price"
        android:layout_toLeftOf="@+id/text_dcp_detail_tc_price"
        android:textColor="#f87b5c"
        android:textSize="16dp"
        android:text="￥" />
    
    <TextView
        android:id="@+id/text_dcp_detail_tc_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/text_dcp_detail_tc_btn"
        android:textColor="#f87b5c"
        android:textSize="16dp"
        android:text="500" />

    <TextView
        style="@style/text_btn_n"
        android:id="@+id/text_dcp_detail_tc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" 
        android:text="售罄"/>

    

</RelativeLayout>
